#include <stdio.h>

int main(){
    int N = 0 ;
        printf("Enter value :\n ") ;
        scanf( "%d" , &N ) ;
    int K = N ;
        printf("Series:\n ") ;
    if ( N %2 == 0 ){
        for( int i = 0 ; i <= N ; i += 2){
            printf( "%d ",K ) ;
            K -= 2 ;
        }//end for
    } else if ( N %2 != 0 ) {
        K = 1 ;
        for( int i = 1 ; i <= N ; i += 2){
            printf( "%d ",K ) ;
            K += 2 ;
        }//end for
    }//end if 
}
